{%extends "page.twig"%}
{%block content%}
<div class="singleColumn">
{%if not(post.local)%}
<a href="{{post.url}}" target="_blank">Original</a><br/>
{%endif%}
{%include "wall_post.twig"%}
<div id="postReplies{{post.id}}">{%for reply in post.replies%}
{%include "wall_reply.twig" with {post: reply}%}
{%endfor%}</div>
</div>
{%if currentUser%}{%include "wall_post_form.twig" with {replyTo: post}%}{%endif%}
{%endblock%}