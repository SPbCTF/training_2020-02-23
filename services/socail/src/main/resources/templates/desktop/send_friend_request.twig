{%extends "page.twig"%}
{%block content%}
<center class="notMuchContent">
<form method="post" action="/{{targetUser.username}}/doSendFriendRequest">
	<p>{{L("sending_friend_req_to_X", targetUser.fullName)}}</p>
	<textarea name="message" placeholder="{{L('add_optional_message')}}"></textarea><br/>
	<input type="hidden" name="csrf" value="{{csrf}}"/>
	<input type="submit" value="{{L('send')}}"/>
</form>
</center>
{%endblock%}